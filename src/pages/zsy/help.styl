@import "~common/stylus/variable"
@import "~common/stylus/mixin"
.help
  // position: absolute
  // left: 0
  // right: 0
  // top: 0
  // bottom: 0
  background-color white
  .content
    width 100%
    height 100%
    overflow hidden
    .item-qa 
      border-top solid 10px #eee
      h3
        font-size 12px
        color #323232
        font-weight bold
    .item
      height auto
      position relative
      padding-right 10px
      padding-left $font-size-medium-15
      border1pxTopLine($color-background-line)
      .item-title
        height 50px
        position relative
        color #323232
        font-size $font-size-medium-15
        font-weight bold
        line-height 50px
        .iconRightArrow
          position absolute
          right 0px
          width 15px
          height 26px
          top 18px
          bg-image('icon_arrow')
          background-size 60%
          background-repeat no-repeat
      .item-content
        width 100%
        overflow hidden
        padding-bottom 12px
        font-size 12px
        line-height 22px
        color #323232
        text-align justify
