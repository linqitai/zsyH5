@import "~common/stylus/variable"
@import "~common/stylus/mixin"
.message
  page()
 .content
   margin-top 54px
   .item
      position relative
      overflow hidden
      width 100%
      height 80px
      background-color white
      border1pxBottom2(rgb(230,230,230))
      &:last-child
        border1pxBottom2Last(rgb(230,230,230))
      &.changeColor
        color rgb(170,170,170) // ---
     .item-img
        display block
        height 36px
        width 36px
        background-size 100%
        background-repeat no-repeat
        margin-left 15px
        position absolute
        top 50%
        transform translateY(-50%)
        &.img1
          bg-image('icon_message_n')
        &.img2
          bg-image('icon_message_p') // ---
     .item-bigDiv
        position absolute
        width 100%
        overflow hidden
        padding-left 59px
        top 50%
        transform translateY(-50%)
       .item-title-line
         position relative
         overflow hidden
         width 100%
         font-size 15px
         .item-title
           float left
         .item-time
           position absolute
           right 70px
           top 0px
           font-size 12px
       .item-message
         padding-right 10px
         margin-top 2px
         font-size 12px
         width 100%
         white-space nowrap
         overflow hidden
         text-overflow ellipsis




